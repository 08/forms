<html>
    <head>
        <title>Example Form</title>
        <style>
            form {
                border-top: 1px dashed #ccc;
                width: 375px;
            }
            label {
                position: relative;
                width: 200px;
                top: 2px;
            }
            .required label {
                font-weight: bold;
            }
            .field {
                border-bottom: 1px dashed #ccc;
                padding: 15px 5px 20px 5px;
                position: relative;
            }
            .field input, .field select {
                position: absolute;
                left: 175px;
            }
            .error {
                background: #ffcccc;
            }
            .error_msg {
                color: red;
                margin: -15px 0 0 0;
                padding: 5px 0;
            }
            input[type='submit'] {
                margin-top: 20px;
            }
        </style>
    </head>
    <body>
        <h1>Example Form</h1>
        <form action="" method="GET">
            {form}
            <input type="submit" />
        </form>
    </body>
</html>
